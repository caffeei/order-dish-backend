{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "libs/db": [
        "libs/@libs/db/src"
      ],
      "libs/db/*": [
        "libs/@libs/db/src/*"
      ],
      "@app/db-module": [
        "libs/db-module/src"
      ],
      "@app/db-module/*": [
        "libs/db-module/src/*"
      ],
      "@app/db": [
        "libs/db/src"
      ],
      "@app/db/*": [
        "libs/db/src/*"
      ]
    }
  }
}